public function humandate_noe($timestamp) {
    $seconds = $_SERVER['REQUEST_TIME'] - $timestamp;
    if ($seconds > 86400) {
        return floor($seconds / 86400) . '天';
    } elseif ($seconds > 3600) {
        return floor($seconds / 3600) . '小时';
    } elseif ($seconds > 60) {
        return floor($seconds / 60) . '分钟';
    } else {
        return $seconds . '秒';
    }
}